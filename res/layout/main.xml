<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView
	android:id="@+id/messages"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />


<TextView
	android:id="@+id/stats"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Qui vanno le statistiche"
/>
<TextView
	android:id="@+id/best_clicks"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:textColor="#FF0000"
/>
<TextView
	android:id="@+id/previous_clicks"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
/>
<TextView
	android:id="@+id/current_clicks"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="@string/number_of_clicks"
	
/>
   
<Button 
	android:id="@+id/game_button"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:height="100dp"
	android:textScaleX="0.9"
	android:textSize="25sp"
	android:layout_marginTop="10sp"
	android:layout_marginRight="10sp"
	android:layout_marginBottom="10sp"
	android:layout_marginLeft="10sp"
	android:text="@string/game_button_text"
	android:onClick="countClick"
/>

<TextView
	android:id="@+id/debug"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
/>
</LinearLayout>

